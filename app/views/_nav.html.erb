    $(window).scroll(function (event) {
        var scroll = $(window).scrollTop();

        if(scroll >= 70){
            $(".main-navbar").css({
                background:"white",
                height:"80px",
                borderBottom: "7px solid black",
                zIndex: "6"
            });

