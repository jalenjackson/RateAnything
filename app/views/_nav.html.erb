            $(".left-side-nav-items").css({
                marginTop: "75px"
            });
            $(".lower-overlay").css({
                top: "150px"
            });
            $(".animated-dropdown").css({
                marginTop: "-30px"
            });
            $(".title-container").css({
                marginTop: "70px"
            });
            $(".right-side-nav-items").css({
                marginTop: "70px"
            });


        }

        if(window.innerWidth > 860) {

            if (!/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {


                if (scroll >= 2000) {
                    $(".whats-new-side-container").css({
                        position: "fixed",
                        top: "-40%",
                        right: 0
                    });


                }

                else if (scroll < 2000) {
                    $(".whats-new-side-container").css({
                        position: "absolute",
                        top: '140px',
                        left: '64%'
                    });
                }

                if (scroll > 2960) {
                    $(".whats-new-side-container").css({
                        position: "absolute",
                        top: '1000px',
                        left: '64%'

                    });
                }
            } else {
                $(".whats-new-side-container").css({
                    position: "absolute",
                    top: '140px',
                    left: '64%'
                });
            }
        }


    });


